[user]
  name = Chris LoPresto
  email = chris@chrislopresto.com

[credential]
  helper = osxkeychain

[color]
  ui = true

[core]
	editor = subl -n -w
  excludesfile = ~/.gitignore

[mergetool]
  keepBackup = true
	keepTemporaries = false
	prompt = false

[push]
  default = simple

[filter "media"]
  required = true
	clean = git media clean %f
	smudge = git media smudge %f

[github]
	user = chrislopresto

[ghi]
	token = !security find-internet-password -a chrislopresto -s github.com -l 'ghi token' -w

[include]
  path = .gitthings

[hub]
protocol = https

[alias]
  showtool = "!f() { git difftool $1^ $1; }; f"
  added = difftool --cached

[diff]
  tool = icdiff

[difftool]
  prompt = false

[difftool "icdiff"]
  cmd = /usr/local/bin/icdiff --line-numbers $LOCAL $REMOTE

[pager]
  difftool = true
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
