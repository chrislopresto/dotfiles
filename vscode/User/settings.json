// Place your settings in this file to overwrite the default settings
{
  "editor.fontFamily": "Hasklig",
  "terminal.integrated.fontFamily": "Fira Mono for Powerline",
  "terminal.external.osxExec": "iTerm.app",
  "editor.fontSize": 14,
  "editor.fontLigatures": true,
  "editor.lineHeight": 15,
  "editor.lineNumbers": "on",
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [
    140
  ],
  "editor.tabSize": 2,
  "editor.quickSuggestionsDelay": 1,
  "emmet.includeLanguages": {
    "erb": "html",
    "twig": "html"
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "workbench.iconTheme": "eq-material-theme-icons",
  "workbench.sideBar.location": "right",
  "window.zoomLevel": 0,
  "workbench.colorTheme": "Shades of Purple",
  "workbench.statusBar.visible": false,
  "workbench.activityBar.visible": false,
  "vsicons.projectDetection.autoReload": true,
  "vsicons.dontShowNewVersionMessage": true,
  "sublimeTextKeymap.promptV3Features": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.snippetSuggestions": "top",
  // "editor.formatOnPaste": true,
  // "editor.formatOnSave": true,
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotFoundWarning": false,
    "suppressFileNotUnderSourceControlWarning": false,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false,
    "suppressResultsExplorerNotice": false,
    "suppressShowKeyBindingsNotice": true,
    "suppressUpdateNotice": true,
    "suppressWelcomeNotice": true
  },
  "git.enableCommitSigning": true,
  "workbench.editor.showTabs": true,
  "gitlens.gitExplorer.files.layout": "list",
  "vscodeWorkspaceSwitcher.paths": [
    "/Users/chrislopresto/.ellipsis/packages/dotfiles/vscode/workspaces",
    "/Users/chrislopresto/.ellipsis/packages/dotfiles/vscode/workspaces/private"
  ],
  "files.associations": {
    ".env.sample": "dotenv",
    "*.css": "postcss"
  },
  "gitlens.keymap": "chorded",
  "gitlens.historyExplorer.enabled": true
}
