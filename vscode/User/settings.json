// Place your settings in this file to overwrite the default settings
{
  "editor.fontFamily": "Fira Code",
  "terminal.external.osxExec": "iTerm.app",
  "editor.fontLigatures": true,
  "editor.lineNumbers": "off",
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [
    140
  ],
  "editor.tabSize": 2,
  "editor.quickSuggestionsDelay": 1,
  "emmet.includeLanguages": {
    "erb": "html",
    "twig": "html",
    "mdx": "Markdown React (mdx)"
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "workbench.iconTheme": null,
  "workbench.sideBar.location": "right",
  "window.zoomLevel": 0,
  "workbench.statusBar.visible": true,
  "workbench.activityBar.visible": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotFoundWarning": false,
    "suppressFileNotUnderSourceControlWarning": false,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false,
    "suppressResultsExplorerNotice": false,
    "suppressShowKeyBindingsNotice": true,
    "suppressUpdateNotice": true,
    "suppressWelcomeNotice": true
  },
  "git.enableCommitSigning": true,
  "workbench.editor.showTabs": true,
  "vscodeWorkspaceSwitcher.paths": [
    "/Users/chrislopresto/.dotfiles/vscode/workspaces",
    "/Users/chrislopresto/.dotfiles/vscode/workspaces/private"
  ],
  "files.associations": {
    ".env.sample": "dotenv",
    "*.css": "postcss"
  },
  "gitlens.keymap": "chorded",
  "vscodeWorkspaceSwitcher.codeExecutable": "/usr/local/bin/code",
  "vscodeWorkspaceSwitcher.codeInsidersExecutable": "/usr/local/bin/code-insiders",
  "breadcrumbs.enabled": false,
  "editor.cursorBlinking": "expand",
  "window.nativeFullScreen": false,
  "bracket-pair-colorizer-2.forceIterationColorCycle": true,
  "gitlens.views.repositories.files.layout": "list",
  "gitlens.views.fileHistory.enabled": true,
  "gitlens.views.lineHistory.enabled": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true
  },
  "terminal.integrated.fontFamily": "FuraCode Nerd Font",
  "editor.suggestSelection": "recentlyUsedByPrefix",
  "terminal.integrated.fontWeightBold": "normal",
  "terminal.integrated.lineHeight": 1.2,
  "editor.lineHeight": 17,
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.suggest.filteredTypes": {
    "keyword": false
  },
  "editor.suggest.maxVisibleSuggestions": 8,
  "editor.suggest.showIcons": false,
  "workbench.colorTheme": "Andromeda Colorizer",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.suggest.localityBonus": true
}
