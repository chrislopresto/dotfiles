// Place your settings in this file to overwrite the default settings
{
  "editor.fontFamily": "Victor Mono",
  "terminal.external.osxExec": "iTerm.app",
  "editor.fontLigatures": true,
  "editor.lineNumbers": "off",
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "selection",
  "editor.rulers": [],
  "editor.tabSize": 2,
  "editor.quickSuggestionsDelay": 0,
  "emmet.includeLanguages": {
    "erb": "html",
    "twig": "html",
    "mdx": "Markdown React (mdx)"
  },
  "files.trimTrailingWhitespace": true,
  "workbench.sideBar.location": "right",
  "window.zoomLevel": 0,
  "workbench.statusBar.visible": false,
  "workbench.activityBar.visible": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotFoundWarning": false,
    "suppressFileNotUnderSourceControlWarning": false,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false,
  },
  "git.enableCommitSigning": true,
  "vscodeWorkspaceSwitcher.paths": [
    "/Users/chrislopresto/.dotfiles/vscode/workspaces",
    "/Users/chrislopresto/.dotfiles/vscode/workspaces/private"
  ],
  "files.associations": {
    ".env.sample": "dotenv",
    "*.css": "postcss",
    "*.mdx": "markdown",
    "gitthings": "properties"
  },
  "gitlens.keymap": "chorded",
  "breadcrumbs.enabled": false,
  "editor.cursorBlinking": "expand",
  "bracket-pair-colorizer-2.forceIterationColorCycle": true,
  "gitlens.views.repositories.files.layout": "list",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true
  },
  "terminal.integrated.fontFamily": "Iosevka Nerd Font",
  "editor.suggestSelection": "recentlyUsedByPrefix",
  "terminal.integrated.fontWeightBold": "normal",
  "terminal.integrated.lineHeight": 1.2,
  "editor.lineHeight": 16,
  "editor.suggest.showKeywords": false,
  "editor.suggest.showIcons": false,
  "workbench.colorTheme": "Radical",
  "editor.suggest.localityBonus": true,
  "terminal.integrated.macOptionClickForcesSelection": true,
  "workbench.editor.tabCloseButton": "off",
  "editor.fontSize": 13,
  "workbench.editor.enablePreview": false,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.acceptSuggestionOnCommitCharacter": false,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "vsicons.dontShowNewVersionMessage": true,
  "workbench.editor.revealIfOpen": true,
  "zenMode.fullScreen": false,
  "eslint.packageManager": "npm",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "mdx"
  ],
  "workbench.editor.labelFormat": "medium",
  "workbench.editor.centeredLayoutAutoResize": false,
  "gitlens.codeLens.enabled": false,
  "terminal.integrated.shell.osx": "/bin/zsh",
  "cSpell.enabledLanguageIds": [
    "markdown",
  ],
  "customizeUI.activityBar": "bottom",
  "customizeUI.activityBarHideSettings": true,
  "customizeUI.titleBar": "frameless",
  "window.nativeFullScreen": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "files.insertFinalNewline": true,
  "workbench.startupEditor": "newUntitledFile",
  "gitlens.showWelcomeOnInstall": false,
  "[mdx]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.statusBar.visible": false
}
